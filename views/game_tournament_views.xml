<?xml version="1.0"?>
<odoo>
    <record id="game_tournament_action" model="ir.actions.act_window">
        <field name="name">Tournament Details</field>
        <field name="res_model">game.tournament</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your first TOURNAMENT!
            </p>
        </field>
    </record>

    <!-- TREE(LIST) VIEW -->
    <record id="game_tournament_view_tree" model="ir.ui.view">
        <field name="name">game.tournament.tree</field>
        <field name="model">game.tournament</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" />
                <field name="game" />
                <field name="teams_registered" />
                <field name="scheduled_date" />
            </tree>
        </field>
    </record>


    <!-- FORM VIEW -->
    <record id="game_tournament_view_form" model="ir.ui.view">
        <field name="name">game.tournament.form</field>
        <field name="model">game.tournament</field>
        <field name="arch" type="xml">
            <form string="Form View String">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Select Team Here..." />
                        </h1>
                    </div>
                    <br />
                    <group>
                        <field name="game" />
                        <field name="teams_registered" />
                        <field name="scheduled_date" />
                    </group>
                    <br />
                </sheet>
            </form>
        </field>
    </record>


</odoo>